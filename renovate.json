{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": [],
  "regexManagers": [
      {
        "description": "Update dev environment first",
        "fileMatch": ["^argo-rollouts/environments/dev/kustomization\\.yaml$"],
        "matchStrings": [
          "(?<depName>quay\\.io/argoproj/argo-rollouts):(?<currentValue>[\\w.-]+)"
        ],
        "datasourceTemplate": "docker",
        "versioningTemplate": "semver",
        "depNameTemplate": "{{customDep}}-dev",
        "lookupNameTemplate": "{{customDep}}"
      },
      {
        "description": "Update test environment after dev",
        "fileMatch": ["^argo-rollouts/environments/test/kustomization\\.yaml$"],
        "matchStrings": [
          "(?<depName>quay\\.io/argoproj/argo-rollouts):(?<currentValue>[\\w.-]+)"
        ],
        "datasourceTemplate": "docker",
        "versioningTemplate": "semver",
        "depNameTemplate": "{{customDep}}-test",
        "lookupNameTemplate": "{{customDep}}"
      }
    ]
    }
