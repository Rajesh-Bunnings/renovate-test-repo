{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "commitMessagePrefix": "feat(PSDO-1234): ",
  "enabledManagers": [
    "custom.regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update quay.io argo-rollouts image tags",
      "managerFilePatterns": [
        "/^argo-rollouts/environments/.*/kustomization\\.yaml$/"
      ],
      "matchStrings": [
        "(?<depName>quay\\.io/argoproj/argo-rollouts):(?<currentValue>[\\w.-]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update cert-manager Helm chart versions",
      "managerFilePatterns": [
        "/^cert-manager/environments/dev/kustomization\\.yaml$/"
      ],
      "matchStrings": [
        "version:\\s*\"(?<currentValue>[\\d.]+)\"\\s*#\\s*Use the version from vars"
      ],
      "depNameTemplate": "cert-manager",
      "datasourceTemplate": "helm",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update akv2k8s Helm chart version",
      "managerFilePatterns": [
        "/^akv2k8s/environments/dev/kustomization\\.yaml$/"
      ],
      "matchStrings": [
        "version:\\s*\"(?<currentValue>[\\d.]+)\"\\s*#\\s*Use the version from vars"
      ],
      "depNameTemplate": "akv2k8s",
      "datasourceTemplate": "helm",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update Dynatrace Operator Helm chart version",
      "managerFilePatterns": [
        "/^dynatrace/environments/dev/kustomization\\.yaml$/"
      ],
      "matchStrings": [
        "version:\\s*\"(?<currentValue>[\\d.]+)\"\\s*#\\s*Use the version from vars"
      ],
      "depNameTemplate": "dynatrace-operator",
      "datasourceTemplate": "helm",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update KEDA Helm chart version",
      "managerFilePatterns": [
        "/^keda/environments/dev/kustomization\\.yaml$/"
      ],
      "matchStrings": [
        "version:\\s*\"(?<currentValue>[\\d.]+)\"\\s*#\\s*Use the version from vars"
      ],
      "depNameTemplate": "keda",
      "datasourceTemplate": "helm",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update Logstash Helm chart version",
      "managerFilePatterns": [
        "/^logstash/environments/dev/kustomization\\.yaml$/"
      ],
      "matchStrings": [
        "version:\\s*\"(?<currentValue>[\\d.]+)\"\\s*#\\s*Use the version from vars"
      ],
      "depNameTemplate": "logstash",
      "datasourceTemplate": "helm",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update ingress-nginx Helm chart version",
      "managerFilePatterns": [
        "/^nginx-ingress-controller/environments/dev/kustomization\\.yaml$/"
      ],
      "matchStrings": [
        "version:\\s*\"(?<currentValue>[\\d.]+)\"\\s*#\\s*Use the version from vars"
      ],
      "depNameTemplate": "ingress-nginx",
      "datasourceTemplate": "helm",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update ingress-nginx-public Helm chart version",
      "managerFilePatterns": [
        "/^nginx-public-ingress-controller/environments/dev/kustomization\\.yaml$/"
      ],
      "matchStrings": [
        "version:\\s*\"(?<currentValue>[\\d.]+)\"\\s*#\\s*Use the version from vars"
      ],
      "depNameTemplate": "ingress-nginx",
      "datasourceTemplate": "helm",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update OpenTelemetry Operator Helm chart version",
      "managerFilePatterns": [
        "/^observability/environments/dev/kustomization\\.yaml$/"
      ],
      "matchStrings": [
        "version:\\s*\"(?<currentValue>[\\d.]+)\"\\s*#\\s*Use the version from vars"
      ],
      "depNameTemplate": "opentelemetry-operator",
      "datasourceTemplate": "helm",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update otel-collector Helm chart versions",
      "managerFilePatterns": [
        "/^otel-collector/environments/dev/otel-collector\\.yaml$/"
      ],
      "matchStrings": [
        "image:\\s*(?<depName>otel/opentelemetry-collector-contrib):(?<currentValue>[\\w.-]+)\\s*# Basic Auth is available only in contrib version\\."
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "helm"
      ],
      "matchPackageNames": [
        "cert-manager"
      ],
      "registryUrls": [
        "https://charts.jetstack.io"
      ]
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "matchPackageNames": [
        "akv2k8s"
      ],
      "registryUrls": [
        "https://charts.spvapi.no/"
      ]
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "matchPackageNames": [
        "dynatrace-operator"
      ],
      "registryUrls": [
        "https://raw.githubusercontent.com/Dynatrace/dynatrace-operator/main/config/helm/repos/stable"
      ]
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "matchPackageNames": [
        "keda"
      ],
      "registryUrls": [
        "https://kedacore.github.io/charts"
      ]
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "matchPackageNames": [
        "logstash"
      ],
      "registryUrls": [
        "https://helm.elastic.co"
      ]
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "matchPackageNames": [
        "opentelemetry-operator"
      ],
      "registryUrls": [
        "https://open-telemetry.github.io/opentelemetry-helm-charts"
      ]
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "matchPackageNames": [
        "ingress-nginx"
      ],
      "registryUrls": [
        "https://kubernetes.github.io/ingress-nginx"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "opentelemetry-collector-contrib"
      ],
      "registryUrls": [
        "https://open-telemetry.github.io/opentelemetry-helm-charts"
      ]
    }
  ]
}
