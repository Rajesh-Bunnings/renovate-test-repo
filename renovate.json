{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "custom.regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update dev environment first",
      "managerFilePatterns": [
        "/^argo-rollouts/environments/.*/kustomization\\.yaml$/"
      ],
      "matchStrings": [
        "(?<depName>quay\\.io/argoproj/argo-rollouts):(?<currentValue>[\\w.-]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    },
    {
      "description": "Update cert-manager Helm chart versions",
      "fileMatch": ["^cert-manager/environments/.*/kustomization\\.yaml$"],
      "matchStrings": [
        "version:\\s*\"(?<currentValue>[\\d.]+)\"\\s*#\\s*Use the version from vars"
      ],
      "depName": "jetstack/cert-manager",
      "datasourceTemplate": "helm",
      "versioningTemplate": "semver"
    }
  ]
}